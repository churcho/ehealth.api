{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$"
    },
    "simple_quantity": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "description": "Dictionary: eHealth/ucum/units"
        },
        "system": {
          "type": "string",
          "enum": [
            "eHealth/ucum/units"
          ]
        },
        "code": {
          "type": "string",
          "description": "Dictionary: eHealth/ucum/units"
        }
      },
      "required": [
        "value",
        "unit"
      ],
      "additionalProperties": false
    },
    "range": {
      "type": "object",
      "properties": {
        "low": {
          "$ref": "#/definitions/simple_quantity"
        },
        "high": {
          "$ref": "#/definitions/simple_quantity"
        }
      },
      "required": [
        "low",
        "high"
      ],
      "additionalProperties": false
    },
    "ratio": {
      "type": "object",
      "properties": {
        "numerator": {
          "$ref": "#/definitions/simple_quantity"
        },
        "denominator": {
          "$ref": "#/definitions/simple_quantity"
        }
      },
      "required": [
        "numerator",
        "denominator"
      ],
      "additionalProperties": false
    },
    "dosage": {
      "type": "object",
      "properties": {
        "sequence": {
          "type": "integer",
          "minimum": 0,
          "exclusiveMinimum": true,
          "description": "The order of the dosage instructions"
        },
        "text": {
          "type": "string",
          "description": "Free text dosage instructions e.g. SIG"
        },
        "additional_instruction": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "coding": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "system": {
                      "type": "string",
                      "enum": [
                        "eHealth/SNOMED/additional_dosage_instructions"
                      ]
                    },
                    "code": {
                      "type": "string",
                      "minLength": 1,
                      "description": "Dictionary: eHealth/SNOMED/additional_dosage_instructions"
                    }
                  },
                  "required": [
                    "code",
                    "system"
                  ],
                  "additionalProperties": false
                }
              },
              "text": {
                "type": "string"
              }
            },
            "required": [
              "coding"
            ],
            "additionalProperties": false
          }
        },
        "patient_instruction": {
          "type": "string",
          "minLength": 1,
          "description": "Patient or consumer oriented instructions"
        },
        "timing": {
          "type": "object",
          "properties": {
            "event": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "date-time",
                "description": "When the event occurs. ISO 8601 date and time in UTC timezone."
              }
            },
            "repeat": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Number of times to repeat"
                },
                "count_max": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Maximum number of times to repeat"
                },
                "duration": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "How long when it happens"
                },
                "duration_max": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "How long when it happens Max"
                },
                "duration_unit": {
                  "type": "string",
                  "description": "Dictionary: UNITS_OF_TIME"
                },
                "frequency": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Event occurs frequency times per period"
                },
                "frequency_max": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Event occurs up to frequencyMax times per period"
                },
                "period": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Event occurs frequency times per period"
                },
                "period_max": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Upper limit of period"
                },
                "period_unit": {
                  "type": "string",
                  "description": "Dictionary: UNITS_OF_TIME"
                },
                "day_of_week": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Dictionary: DAYS_OF_WEEK"
                  }
                },
                "time_of_day": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Time of day for action"
                  }
                },
                "when": {
                  "type": "array",
                  "description": "Regular life events the event is tied to",
                  "items": {
                    "type": "string",
                    "description": "Dictionary: EVENT_TIMING"
                  }
                },
                "offset": {
                  "type": "integer",
                  "description": "Minutes from event before or after"
                }
              },
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "bounds_duration": {
                      "$ref": "#/definitions/simple_quantity"
                    }
                  },
                  "required": [
                    "bounds_duration"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "bounds_range": {
                      "$ref": "#/definitions/range"
                    }
                  },
                  "required": [
                    "bounds_range"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "bounds_period": {
                      "type": "object",
                      "properties": {
                        "start": {
                          "type": "string",
                          "format": "date-time",
                          "description": "C? Starting time with inclusive boundary"
                        },
                        "end": {
                          "type": "string",
                          "format": "date-time",
                          "description": "C? End time with inclusive boundary, if not ongoing"
                        }
                      },
                      "required": [
                        "start",
                        "end"
                      ]
                    }
                  },
                  "required": [
                    "bounds_period"
                  ]
                }
              ]
            },
            "code": {
              "type": "object",
              "properties": {
                "coding": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "properties": {
                      "system": {
                        "type": "string",
                        "enum": [
                          "TIMING_ABBREVIATION"
                        ]
                      },
                      "code": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Dictionary: TIMING_ABBREVIATION"
                      }
                    },
                    "required": [
                      "code",
                      "system"
                    ],
                    "additionalProperties": false
                  }
                },
                "text": {
                  "type": "string"
                }
              },
              "required": [
                "coding"
              ],
              "additionalProperties": false
            }
          }
        },
        "site": {
          "type": "object",
          "properties": {
            "coding": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "system": {
                    "type": "string",
                    "enum": [
                      "eHealth/SNOMED/anatomical_structure_administration_site_codes"
                    ]
                  },
                  "code": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Dictionary: eHealth/SNOMED/anatomical_structure_administration_site_codes"
                  }
                },
                "required": [
                  "code",
                  "system"
                ],
                "additionalProperties": false
              }
            },
            "text": {
              "type": "string"
            }
          },
          "required": [
            "coding"
          ],
          "additionalProperties": false
        },
        "route": {
          "type": "object",
          "properties": {
            "coding": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "system": {
                    "type": "string",
                    "enum": [
                      "eHealth/SNOMED/route_codes"
                    ]
                  },
                  "code": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Dictionary: eHealth/SNOMED/route_codes"
                  }
                },
                "required": [
                  "code",
                  "system"
                ],
                "additionalProperties": false
              }
            },
            "text": {
              "type": "string"
            }
          },
          "required": [
            "coding"
          ],
          "additionalProperties": false
        },
        "method": {
          "type": "object",
          "properties": {
            "coding": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "system": {
                    "type": "string",
                    "enum": [
                      "eHealth/SNOMED/administration_methods"
                    ]
                  },
                  "code": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Dictionary: eHealth/SNOMED/administration_methods"
                  }
                },
                "required": [
                  "code",
                  "system"
                ],
                "additionalProperties": false
              }
            },
            "text": {
              "type": "string"
            }
          },
          "required": [
            "coding"
          ],
          "additionalProperties": false
        },
        "dose_and_rate": {
          "type": "object",
          "allOf": [
            {
              "properties": {
                "type": {
                  "type": "object",
                  "properties": {
                    "coding": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "object",
                        "properties": {
                          "system": {
                            "type": "string",
                            "enum": [
                              "eHealth/dose_and_rate"
                            ]
                          },
                          "code": {
                            "type": "string",
                            "minLength": 1,
                            "description": "Dictionary: eHealth/dose_and_rate"
                          }
                        },
                        "required": [
                          "code",
                          "system"
                        ],
                        "additionalProperties": false
                      }
                    },
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "coding"
                  ],
                  "additionalProperties": false
                }
              }
            },
            {
              "allOf": [
                {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "dose_range": {
                          "$ref": "#/definitions/range"
                        }
                      },
                      "required": [
                        "dose_range"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "dose_quantity": {
                          "$ref": "#/definitions/simple_quantity"
                        }
                      },
                      "required": [
                        "dose_quantity"
                      ]
                    }
                  ]
                },
                {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "rate_ratio": {
                          "$ref": "#/definitions/ratio"
                        }
                      },
                      "required": [
                        "rate_ratio"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "rate_range": {
                          "$ref": "#/definitions/range"
                        }
                      },
                      "required": [
                        "rate_range"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "rate_quantity": {
                          "$ref": "#/definitions/range"
                        }
                      },
                      "required": [
                        "rate_quantity"
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        "max_dose_per_period": {
          "$ref": "#/definitions/ratio"
        },
        "max_dose_per_administration": {
          "$ref": "#/definitions/simple_quantity"
        },
        "max_dose_per_lifetime": {
          "$ref": "#/definitions/simple_quantity"
        }
      },
      "oneOf": [
        {
          "allOf": [
            {
              "not": {
                "required": [
                  "as_needed_boolean"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "as_needed_codeable_concept"
                ]
              }
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "as_needed_boolean": {
              "type": "boolean"
            }
          },
          "required": [
            "as_needed_boolean"
          ]
        },
        {
          "type": "object",
          "properties": {
            "as_needed_codeable_concept": {
              "type": "object",
              "properties": {
                "coding": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "properties": {
                      "system": {
                        "type": "string",
                        "enum": [
                          "eHealth/SNOMED/medication_as_needed_reason"
                        ]
                      },
                      "code": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Dictionary: eHealth/SNOMED/medication_as_needed_reason"
                      }
                    },
                    "required": [
                      "code",
                      "system"
                    ],
                    "additionalProperties": false
                  }
                },
                "text": {
                  "type": "string"
                }
              },
              "required": [
                "coding"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "as_needed_codeable_concept"
          ]
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Medication Request identifier"
    },
    "status": {
      "type": "string",
      "description": "Medication Request status. Find available **statuses** on State Charts wiki page"
    },
    "request_number": {
      "type": "string",
      "description": "Public medication request human readable number"
    },
    "created_at": {
      "type": "string",
      "description": "Medication request creation date, which is determined by the external system. Format *DATE '2017-09-07'*"
    },
    "started_at": {
      "type": "string",
      "description": "Start date of a treatment period, which is determined by the external system. Greater or equal to **created_at**. Format *DATE '2017-09-07'*"
    },
    "ended_at": {
      "type": "string",
      "description": "End date of a treatment period, which is determined by the external system. Greater or equal to **started_at**. Format *DATE '2017-10-07'*"
    },
    "dispense_valid_from": {
      "type": "string",
      "description": "Start date of dispense period, which is determined by the external system. Format *DATE '2017-09-07'*"
    },
    "dispense_valid_to": {
      "type": "string",
      "description": "End date of dispense period, which is determined by the external system. Greater or equal to **dispense_valid_from**. Format *DATE '2017-10-07'*"
    },
    "legal_entity": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "edrpou": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "CLOSED"
          ]
        },
        "licenses": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "license_number": {
                "type": "string"
              },
              "issued_by": {
                "type": "string"
              },
              "issued_date": {
                "type": "string",
                "format": "date"
              },
              "expiry_date": {
                "type": "string",
                "format": "date"
              },
              "active_from_date": {
                "type": "string",
                "format": "date"
              },
              "what_licensed": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "order_no": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "номер наказу"
              }
            },
            "required": [
              "issued_by",
              "issued_date",
              "active_from_date",
              "order_no"
            ]
          },
          "minItems": 1
        },
        "accreditation": {
          "type": "object",
          "properties": {
            "category": {
              "type": "string",
              "description": "Dictionary: ACCREDITATION_CATEGORY"
            },
            "issued_date": {
              "type": "string"
            },
            "expiry_date": {
              "type": "string"
            },
            "order_no": {
              "type": "string",
              "description": "номер наказу МОЗ"
            },
            "order_date": {
              "type": "string"
            }
          },
          "required": [
            "category",
            "order_no"
          ]
        }
      },
      "required": [
        "id",
        "name",
        "type",
        "edrpou",
        "status",
        "licenses"
      ]
    },
    "division": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "legal_entity_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "addresses": {
          "type": "array"
        },
        "phones": {
          "type": "array"
        },
        "email": {
          "type": "string"
        },
        "working_hours": {
          "type": [
            "object",
            "null"
          ]
        },
        "type": {
          "type": "string",
          "description": "Dictionary DIVISION_TYPE"
        },
        "external_id": {
          "type": "string"
        },
        "location": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "latitude": {
              "type": [
                "number",
                "null"
              ]
            },
            "longitude": {
              "type": [
                "number",
                "null"
              ]
            }
          },
          "required": [
            "latitude",
            "longitude"
          ]
        }
      },
      "additionalProperties": false
    },
    "employee": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "position": {
          "type": "string",
          "description": "Dictionary POSITION"
        },
        "party": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "first_name": {
              "type": "string"
            },
            "last_name": {
              "type": "string"
            },
            "second_name": {
              "type": [
                "string",
                "null"
              ]
            },
            "phones": {
              "type": "array"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "person": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "short_name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "description": "Full years between birth date and medication request date"
        }
      },
      "required": [
        "id",
        "short_name",
        "age"
      ],
      "additionalProperties": false
    },
    "medication_info": {
      "type": "object",
      "properties": {
        "medication_id": {
          "type": "string",
          "description": "Identifier medication with type **INNM_DOSAGE**"
        },
        "form": {
          "type": "string",
          "description": "Dictionary MEDICATION_FORM"
        },
        "dosage": {
          "type": "object",
          "properties": {
            "numerator_unit": {
              "type": "string",
              "description": "Dictionary MEDICATION_UNIT"
            },
            "numerator_value": {
              "type": "number"
            },
            "denumerator_unit": {
              "type": "string",
              "description": "Dictionary MEDICATION_UNIT"
            },
            "denumerator_value": {
              "type": "number"
            }
          },
          "required": [
            "numerator_unit",
            "numerator_value",
            "denumerator_unit",
            "denumerator_value"
          ],
          "description": "Dosage of innm_dosage object"
        },
        "medication_name": {
          "type": "string"
        },
        "medication_qty": {
          "type": "number",
          "description": "Medication quantity isuued by the doctor"
        }
      },
      "required": [
        "medication_id",
        "medication_name",
        "form",
        "dosage",
        "medication_qty"
      ]
    },
    "medical_program": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Medical program Identifier"
        },
        "name": {
          "type": "string",
          "description": "Medical program name"
        }
      },
      "additionalProperties": false
    },
    "rejected_at": {
      "type": "string",
      "format": "date-time"
    },
    "rejected_by": {
      "$ref": "#/definitions/uuid"
    },
    "reject_reason": {
      "type": "string",
      "description": "Medication request reject reason"
    },
    "intent": {
      "type": "string",
      "description": "Represents the medication request purpose. Dictionary MEDICATION_REQUEST_INTENT"
    },
    "category": {
      "type": "string",
      "description": "Type of medication usage. Dictionary MEDICATION_REQUEST_CATEGORY"
    },
    "context": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "object",
          "properties": {
            "type": {
              "type": "object",
              "properties": {
                "coding": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "system": {
                        "type": "string"
                      },
                      "code": {
                        "type": "string",
                        "description": "Symbol in syntax defined by the system"
                      }
                    },
                    "required": [
                      "code",
                      "system"
                    ],
                    "additionalProperties": false
                  }
                },
                "text": {
                  "type": "string"
                }
              },
              "required": [
                "coding"
              ],
              "additionalProperties": false
            },
            "value": {
              "type": "string",
              "description": "The value that is unique"
            }
          },
          "required": [
            "value"
          ],
          "additionalProperties": false
        }
      }
    },
    "dosage_instruction": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/dosage"
      }
    }
  },
  "required": [
    "id",
    "status",
    "request_number",
    "created_at",
    "started_at",
    "ended_at",
    "legal_entity",
    "division",
    "employee",
    "person",
    "medication_info",
    "intent",
    "category"
  ],
  "additionalProperties": false
}
